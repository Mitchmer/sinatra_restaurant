<h1>Add a New Menu Item</h1>
<form method="POST" action="/apps">
  <div>
    <input id="title" required name="title" />
    <label class="active" for="title">Title</label>
  </div>
  <div>
    <textarea id="desc" required name="description"></textarea>
    <label for="desc" class="active">Description</label>
  </div>
  <div>
    <input id="price" required name="price" />
    <label class="active" for="price">
  <button class="btn right" type="submit">Save</button>
</form>